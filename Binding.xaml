<Window x:Class="WpfApp.Binding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Binding" Height="450" Width="800">
    <StackPanel>
        <TextBlock FontSize="20" HorizontalAlignment="Center" > Slider </TextBlock>
        <Slider
            x:Name="slide" 
            Minimum="10" 
            Maximum="100" 
            TickFrequency="10" 
            TickPlacement="TopLeft"
            Value="40"
            >
            <!--Value="{Binding ElementName=txt_box , Path=Text}"-->
        </Slider>


        <TextBlock 
            FontSize="20"
            HorizontalAlignment="Center"
                   >
            Target
        </TextBlock>
        <TextBox 
            x:Name="txt_box"
            FontSize="{Binding ElementName=slide , Path=Value }" 
            Text="{Binding ElementName=slide , Path=Value , Mode=TwoWay}"
            >
        </TextBox>
    
    </StackPanel>
</Window>
