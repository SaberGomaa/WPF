<Window x:Class="WpfApp.SimpleBinding"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="SimpleBinding" Height="450" Width="800">
    <StackPanel>
        <Label Target="{x:Reference Name=fName}"> _First Name </Label>
        <TextBox Name="fName"></TextBox>

        <Label Target="{x:Reference Name=lName}">_Last Name</Label>
        <TextBox Name="lName"></TextBox>
    </StackPanel>
</Window>
